{
  "name": "@peoplefund-tech/stylelint-order",
  "version": "0.0.2",
  "description": "A collection of order related linting rules for stylelint by peoplefund.",
  "keywords": [
    "peoplefund",
    "stylelint-plugin",
    "stylelint",
    "css",
    "lint",
    "order"
  ],
  "author": "Peoplefund",
  "license": "MIT",
  "repository": "hudochenkov/stylelint-order",
  "bugs": {
    "url": "https://github.com/peoplefund-tech/peoplefund-style-lint-rule/issues"
  },
  "homepage": "https://github.com/peoplefund-tech/peoplefund-style-lint-rule",
  "files": [
    "rules",
    "utils",
    "!**/tests",
    "index.js",
    "!.DS_Store"
  ],
  "main": "index.js",
  "dependencies": {
    "lodash": "^4.17.15",
    "postcss": "^7.0.26",
    "postcss-sorting": "^5.0.1"
  },
  "peerDependencies": {
    "stylelint": "^10.0.1 || ^11.0.0 || ^12.0.0 || ^13.0.0"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-hudochenkov": "^4.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-unicorn": "^16.1.1",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "prettier": "~1.19.1",
    "stylelint": "^12.0.1"
  },
  "scripts": {
    "pretest": "eslint . --max-warnings=0",
    "test": "jest",
    "jest": "jest",
    "watch": "jest --watch",
    "coverage": "jest --coverage",
    "fix": "eslint . --fix --max-warnings=0 && prettier '**/*.js' --write"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix --max-warnings=0",
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "setupFiles": [
      "./jest-setup.js"
    ],
    "testEnvironment": "node",
    "testRegex": ".*\\.test\\.js$|rules/.*/tests/.*\\.js$"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
